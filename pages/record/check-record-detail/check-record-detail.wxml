<!--pages/record/check-record-detail/check-record-detail.wxml-->
<view class='b-t'></view>

<view class='text-panel'>
  <view class='text-panel-hd'>
    <view class="am-flex-item">
      <view class='am-flex-title'>
        <text class='h4'>{{data.itemName}}</text>
      </view>
      <view class='am-flex-after'>
        <text class='small'>{{data.reportDate}}</text>
      </view> 
    </view>
    <view class="am-flex-item am-nmt-5">
      <view class='am-flex-title'>
        <text class='am-txt-light'>报告单号：{{data.reportNo}}</text>
      </view>
      <!-- <view class='am-flex-after'>
        <text class='small'>{{data.reportDate}}</text>
      </view> -->
    </view>
  </view>
  <!-- ----------- -->
  <view class='text-panel-bd b-t'>
    <view class="am-flex-item" wx:if="{{data.userName}}">
      <view class='am-flex-title'>
        <text class='am-txt-light'>就诊人</text>
      </view>
      <view class='am-flex-after'>
        <text>{{data.userName}}</text>
      </view>
    </view>
    <view class="am-flex-item" wx:if="{{data.cardNO}}">
      <view class='am-flex-title'>
        <text class='am-txt-light'>门诊号</text>
      </view>
      <view class='am-flex-after'>
        <text>{{data.cardNO}}</text>
      </view>
    </view>
    <!-- ----------- -->
    <!-- 循环中第一个没有这个 -->
    <view class='b-sh-t am-mt-10'></view>
    <!-- ----------- -->
    <view class="am-flex-item">
      <view class='am-flex-title'>
        <text class='am-txt-light'>医生</text>
      </view>
      <view class='am-flex-after'>
        <text>{{data.pacsReportVO.checkDoctorName}}</text>
      </view>
    </view>
  </view>
</view>

<view class='am-panel-block text-panel-form'>
  <view class='am-flex-box'>
    <view class='am-item-label'>检查结果：</view>
    <view class='am-flex-1'>{{data.result}}</view>
  </view>
  <view class='am-flex-box'>
    <view class='am-item-label'>检查结论：</view>
    <view class='am-flex-1'>{{data.conclustion}}</view>
  </view>
</view>
