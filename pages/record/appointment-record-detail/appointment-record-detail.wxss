/* pages/record/appointment-record-detail/appointment-record-detail.wxss */
.model{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.confirm-modal {
  z-index: 20;
  position: fixed;
  left: 15%;
  top: 40%;
  width: 70%;
  padding-top: 30rpx;
  border-radius: 10rpx;
  background: #fff;
  text-align: center;
}
.modal-notice-txt {
  color: #333
}
.input-wrapper {
  height: 90rpx;
  line-height: 90rpx;
  vertical-align: middle;
}
.pw-input {
  display: inline-block;
}
.btn-wrapper {
  display: flex;
}
.btn {
  border-top: 1px solid #eee;
  padding: 20rpx 0;
  width: 50%;
}
.confirm-btn {
  border-left: 1px solid #eee;
  color: green;
}
.mask {
  z-index: 10;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
