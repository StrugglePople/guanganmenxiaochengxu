.line-angle {
  position: absolute;
  left: 50%;
  margin-left: -14rpx;
  bottom: 0;
}
.per-menu-list .line-angle:before, .per-menu-list .line-angle::after {
  content: "";
  position: absolute;
  z-index: 11;
  left: 0;
  bottom: -14rpx;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 14rpx 14rpx 0 14rpx;
}

.per-menu-list .line-angle:before {
  border-color: #e5e5e5 transparent transparent transparent;
}

.per-menu-list .line-angle:after {
  bottom: -12rpx;
  border-color: #fff transparent transparent transparent;
}
