.item-add-visit-per{
  position: relative;
  font-size: 40rpx;
  text-align: center;
  line-height: 48rpx;
  padding: 20rpx 0;
}
.item-add-visit-per .small{
  display: inline-block;
  vertical-align: top;
  font-size: 24rpx;
  line-height: 48rpx;
  color: #888;
}
.item-add-visit-per:before{
    content: "";
    position: absolute;
    z-index: 10;
    left: 0;
    right: 0;
    top: 0;
    height: 1px;
    background: #E5E5E5;
}
@media only screen and (-webkit-min-device-pixel-ratio: 2) {
    .item-add-visit-per:before{
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
    }
}
@media only screen and (-webkit-min-device-pixel-ratio: 3) {
    .item-add-visit-per:before{
        -webkit-transform: scaleY(0.33);
            transform: scaleY(0.33);
    }
}

.visit-per-list:before{
    content: "";
