.b-t{
  position: relative;
}
.b-t::before{
    content: "";
    position: absolute;
    z-index: 10;
    left: 0;
    right: 0;
    top: 0;
    border-top: 1rpx solid #E5E5E5;
    pointer-events: none;
}

.b-b{
  position: relative;
}
.b-b::after{
    content: "";
    position: absolute;
    z-index: 10;
    left: 0;
    right: 0;
    bottom: 0;
    border-bottom: 1rpx solid #E5E5E5;
    pointer-events: none;
}
.b-sh-t{
  position: relative;
}
.b-sh-t::before{
    content: "";
    position: absolute;
    z-index: 10;
    left: 0;
    right: 0;
    top: 0;
    border-top: 1rpx dashed #bbb;
    pointer-events: none;
}

